generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sessions  Session[]
  wallet       Wallet?
  transactions Transaction[]

}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int
  refreshToken String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@index([userId])  // speeds up: find all sessions for a user (logout, refresh)
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  TRANSFER
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
}

enum LedgerEntryType {
  DEBIT
  CREDIT
}

model Wallet {
  id        Int      @id @default(autoincrement())
  userId    Int?     @unique
  isSystem  Boolean  @default(false)

  currency  String   @default("NGN")
  balance   Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User?    @relation(fields: [userId], references: [id])
  entries   LedgerEntry[]
}


model Transaction {
  id             Int               @id @default(autoincrement())
  userId         Int
  type           TransactionType
  amount         Int
  status         TransactionStatus @default(PENDING)
  reference      String            @unique
  idempotencyKey String?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  user           User              @relation(fields: [userId], references: [id])
  entries        LedgerEntry[]

  @@unique([userId, idempotencyKey])
  @@index([userId])                    // speeds up: fetch all transactions for a user
  @@index([userId, createdAt(sort: Desc)]) // speeds up: paginated history (sorted newest first)
  @@index([status])                   // speeds up: filter by PENDING / SUCCESS / FAILED
}


model LedgerEntry {
  id            Int            @id @default(autoincrement())
  transactionId Int
  walletId      Int
  entryType     LedgerEntryType
  amount        Int            // always positive
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  transaction   Transaction    @relation(fields: [transactionId], references: [id])
  wallet        Wallet         @relation(fields: [walletId], references: [id])

  @@index([transactionId])  // speeds up: load all entries for a transaction
  @@index([walletId])       // speeds up: load all entries for a wallet
}

model WebhookEvent {
  id            Int      @id @default(autoincrement())
  provider      String   // "PAYSTACK"
  eventType     String   // e.g. "charge.success"
  reference     String?  // your TX-... reference (if present)
  signature     String?  // x-paystack-signature header
  payload       Json     // raw body parsed (or stringified)
  processed     Boolean  @default(false)
  processedAt   DateTime?
  errorMessage  String?
  createdAt     DateTime @default(now())

  @@unique([provider, reference, eventType])
}
