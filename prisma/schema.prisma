generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  sessions  Session[]
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int
  refreshToken String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
